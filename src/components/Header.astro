---
export const hydrate = "client:load";
---

<header
  x-data="{ open: false }"
  class="fixed w-full py-6 px-4 md:px-8 z-50 bg-white shadow-md border-b border-gold"
>
  <div class="max-w-7xl mx-auto flex justify-between items-center w-full">
    <div class="flex items-center gap-3">
      <img
        src="/images/logo.png"
        alt="Logo Dr. Denile Oliveira"
        class="h-12 w-auto"
      />
      <a href="/" class="text-2xl font-serif text-primary font-bold"
        >Seiva Sana</a
      >
    </div>

    <nav class="relative">
      <!-- Botão hamburger -->
      <button
        @click="open = !open"
        class="md:hidden flex items-center px-3 py-2 border rounded text-primary border-gold focus:outline-none"
        :aria-expanded="open"
        aria-label="Abrir menu de navegação"
      >
        <svg
          class="h-6 w-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      <!-- Menu desktop -->
      <ul
        class="hidden md:flex md:flex-row md:gap-8 md:bg-transparent md:shadow-none md:p-0 md:rounded-none md:items-center md:translate-y-0 w-full md:w-auto"
      >
        <li>
          <a
            href="#desafios"
            class="text-primary hover:text-accent font-sans transition-colors"
            >Desafios</a
          >
        </li>
        <li>
          <a
            href="#metodo"
            class="text-primary hover:text-accent font-sans transition-colors"
            >Método</a
          >
        </li>
        <li>
          <a
            href="#beneficios"
            class="text-primary hover:text-accent font-sans transition-colors"
            >Benefícios</a
          >
        </li>
        <li>
          <a
            href="#depoimentos"
            class="text-primary hover:text-accent font-sans transition-colors"
            >Depoimentos</a
          >
        </li>
        <li>
          <a
            href="#sobre"
            class="text-primary hover:text-accent font-sans transition-colors"
            >Sobre</a
          >
        </li>
        <li>
          <a
            href="https://wa.me/5591992167457"
            target="_blank"
            class="inline px-6 py-2 rounded-full border border-accent text-accent hover:bg-accent hover:text-white font-semibold transition-all text-center"
            >Agende sua consulta</a
          >
        </li>
      </ul>
    </nav>
  </div>
  <!-- Menu mobile fora do container centralizador -->
  <ul
    x-show="open"
    x-cloak
    class="flex fixed top-20 left-0 w-screen z-[9999] flex-col bg-white shadow-lg rounded-b-lg p-6 space-y-4 md:hidden"
  >
    <li>
      <a
        href="#desafios"
        class="text-primary hover:text-accent font-sans transition-colors"
        >Desafios</a
      >
    </li>
    <li>
      <a
        href="#metodo"
        class="text-primary hover:text-accent font-sans transition-colors"
        >Método</a
      >
    </li>
    <li>
      <a
        href="#beneficios"
        class="text-primary hover:text-accent font-sans transition-colors"
        >Benefícios</a
      >
    </li>
    <li>
      <a
        href="#depoimentos"
        class="text-primary hover:text-accent font-sans transition-colors"
        >Depoimentos</a
      >
    </li>
    <li>
      <a
        href="#sobre"
        class="text-primary hover:text-accent font-sans transition-colors"
        >Sobre</a
      >
    </li>
    <li>
      <a
        href="https://wa.me/5591992167457"
        target="_blank"
        class="block px-6 py-2 rounded-full border border-accent text-accent hover:bg-accent hover:text-white font-semibold transition-all text-center"
        >Agende sua consulta</a
      >
    </li>
  </ul>
</header>

<style>
  @media (max-width: 768px) {
    nav ul {
      position: absolute;
      right: 0;
      top: 56px;
      background: white;
      box-shadow: 0 8px 32px 0 rgba(212, 180, 131, 0.18);
      border-radius: 0.75rem;
      padding: 1.5rem;
      width: 14rem;
      z-index: 50;
    }
  }
</style>
